# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your API keys
# cp .env.template .env
#
# NEVER commit .env to git!
# =============================================================================

# ===================
# Twitter/X API
# ===================
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ===================
# Reddit API  
# ===================
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=TrendResearchBot/1.0

# ===================
# Web Search APIs
# ===================
# SerpAPI: https://serpapi.com/ (100 free/month)
SERPAPI_API_KEY=

# Brave Search: https://brave.com/search/api/ (2000 free/month)
BRAVE_SEARCH_API_KEY=

# ===================
# TikTok API (Optional)
# ===================
# Get from: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# ===================
# LLM Providers
# ===================
# Google Gemini: https://makersuite.google.com/
GOOGLE_AI_API_KEY=

# Azure OpenAI: https://portal.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=

# ===================
# Configuration
# ===================
# Default LLM provider: gemini, azure
DEFAULT_LLM_PROVIDER=gemini

# Enable/disable connectors (true/false)
ENABLE_TWITTER=true
ENABLE_REDDIT=true
ENABLE_GOOGLE_TRENDS=true
ENABLE_WEB_SEARCH=true
ENABLE_TIKTOK=true

# Fallback to mock data when API fails
ENABLE_MOCK_FALLBACK=true

# Cache TTL in seconds (1 hour default)
CACHE_TTL_SECONDS=3600

# ===================
# Server Configuration
# ===================
DEBUG=true
HOST=0.0.0.0
PORT=8000
